{
  "name": "Mentions",
  "steps": [
    {
      "channel_key": "in-app-feed",
      "ref": "in_app_feed_1",
      "template": {
        "action_url": "{{ vars.app_url }}/pages/{{page_id}}",
        "markdown_body@": "in_app_feed_1/markdown_body.md"
      },
      "type": "channel"
    },
    {
      "channel_key": "sendgrid",
      "ref": "email_1",
      "template": {
        "settings": {
          "layout_key": "default"
        },
        "subject": "{{ actor.name }} mentioned you on {{ page_name }}",
        "visual_blocks@": "email_1/visual_blocks.json"
      },
      "type": "channel"
    },
    {
      "channel_key": "apns",
      "ref": "push_1",
      "template": {
        "settings": {
          "delivery_type": "content"
        },
        "title": "New mention on {{ page_name }}",
        "text_body@": "push_1/text_body.txt"
      },
      "type": "channel"
    }
  ],
  "trigger_frequency": "every_trigger",
  "__readonly": {
    "environment": "development",
    "key": "mentions",
    "active": true,
    "valid": true,
    "created_at": "2022-01-06T18:39:02.629934Z"
  },
  "$schema": "https://schemas.knock.app/cli/workflow.json"
}
